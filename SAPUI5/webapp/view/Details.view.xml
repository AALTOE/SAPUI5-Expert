<mvc:View
    controllerName="logaligroup.SAPUI5.controller.Details"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:logali="logaligroup.SAPUI5.control"
    displayBlock="true"
>
    <Page
        id="pageDatail"
        title="{i18n>detailsPageTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            id="headeDetail"
            title="{northwind>Quantity} x {northwind>ProductName}"
            responsive="true"
            fullScreenOptimized="true"
        >
            <attributes>
                <ObjectAttribute id="ShipName" text="{northwind>ShipName}" />
                <ObjectAttribute id="ShipAddress" text="{northwind>ShipAddress}" />
                <ObjectAttribute id="ShipCity" text="{northwind>ShipCity}" />
                <ObjectAttribute id="ShipRegion" text="{northwind>ShipRegion}" />
                <ObjectAttribute id="ShipPostalCode" text="{northwind>ShipPostalCode}" />
                <ObjectAttribute id="ShipCountry" text="{northwind>ShipCountry}" />
                <ObjectAttribute id="CustomerID" text="{northwind>CustomerID}" />
                <ObjectAttribute id="CustomerName" text="{northwind>CustomerName}" />

            </attributes>
        </ObjectHeader>

        <logali:ProductRating id="rating" class="sapUISmallMarginBeginEnd" change=".onRatingChange" />
    </Page>
</mvc:View>
