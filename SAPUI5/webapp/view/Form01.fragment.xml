<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Panel
        id="panel2"
        headerText="{i18n>panelTitle}"
        class="sapUiResponsiveMargin"
        width="50%"
        expandable="{device>/system/phone}"
        expand="{= !${device>/system/phone} }"
    >
        <f:SimpleForm
            id="form"
            editable="true"
        >
            <f:content>
                <Label
                    id="labelperson"
                    text="{i18n>labelPerson}"
                    labelFor=""
                />

                <Input
                    id="persName"
                    width="40%"
                />
            </f:content>
        </f:SimpleForm>
    </Panel>
</core:FragmentDefinition>
